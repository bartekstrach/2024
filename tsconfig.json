{
    "compilerOptions": {
        "paths": {
            "@components": ["./client/components"],
            "@components/*": ["./client/components/*"],
            "@enums": ["./client/enums"],
            "@enums/*": ["./client/enums/*"],
            "@types": ["./client/types"],
            "@types/*": ["./client/types/*"],
            "@utils": ["./client/utils"],
            "@utils/*": ["./client/utils/*"],
        },
        "esModuleInterop": true,
        "jsx": "react",
        "baseUrl": ".",
        "moduleResolution": "Bundler",
        "module": "Preserve",
        "target": "ES2020",
        "resolveJsonModule": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"]
    },
    "exclude": ["./node_modules"],
}