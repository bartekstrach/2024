{
    "compilerOptions": {
        "paths": {
            "@client": ["./client"],
            "@client/*": ["./client/*"],
            "@enums": ["client/enums"],
            "@enums/*": ["client/enums/*"],
            "@server": ["./server"],
            "@server/*": ["./server/*"],
            "@types": ["./common/types"],
            "@types/*": ["./common/types/*"],
        },
        "esModuleInterop": true,
        "jsx": "react",
        "baseUrl": ".",
        "moduleResolution": "NodeNext",
        "module": "ESNext",
        "target": "ES2020",
        "resolveJsonModule": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"]
    },
    "exclude": ["./node_modules"],
}