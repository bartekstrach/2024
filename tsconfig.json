{
    "compilerOptions": {
        "paths": {
            "@components": ["src/components"],
            "@components/*": ["src/components/*"],
            "@enums": ["src/enums"],
            "@enums/*": ["src/enums/*"],
            "@types": ["src/types"],
            "@types/*": ["src/types/*"],
            "@utils": ["src/utils"],
            "@utils/*": ["src/utils/*"],
        },
        "esModuleInterop": true,
        "jsx": "react",
        "baseUrl": ".",
        "moduleResolution": "Bundler",
        "module": "Preserve",
        "target": "ES2020",
        "resolveJsonModule": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"]
    },
    "exclude": ["./node_modules"],
}